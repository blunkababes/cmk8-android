<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/mainTab_icon"
      android:layout_width="@dimen/main_tab_icon_width"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/main_tab_icon_top_margin"/>
  <TextView
      android:id="@+id/mainTab_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="top|center_horizontal"
      android:layout_gravity="top|center_horizontal"
      android:textSize="@dimen/main_tab_text_size"
      android:layout_marginBottom="@dimen/main_tab_title_bottom_margin"/>
</LinearLayout>